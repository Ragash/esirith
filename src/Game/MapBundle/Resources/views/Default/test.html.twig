<html>
    <head>
        <title>Map test</title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <style type="text/css">
            .map-wrapper {
                position: relative;
            }
            .map-poi {
                position:absolute;
                width:20px;
                height:20px;
                cursor:pointer;
                border:1px solid #ccc;
            }
            .map-poi:hover {
                box-shadow: 0px 0px 15px red;
                border:1px solid red;
            }
        </style>
    </head>
    <body>
        <div class="map-wrapper">
            {% for poi in map.pois %}
            <div class="map-poi" style="top:{{ poi.y-10 }}px; left:{{ poi.x-10 }}px;"></div>
            {% endfor %}
            <img src="{{asset('bundles/gamemap/images/'~map.filename) }}" />
        </div>
    </body>
</html>


{% if questInstance %}
    {% if timeLeft %}
        {{ questInstance.companion.name }} will be back soon, in: <span class="countdown">{{ timeLeft }}</span>.
    {% else %}
        <a href="{{ path('quest.collect_reward', {'id':questInstance.id}) }}" class="btn">Collect the reward</a>
    {% endif %}
{% else %}
    {% if companions|length > 0 %}
        <select class="quest-companion-select">
            <option value="0"></option>
            {% for companion in companions %}
                <option value="{{ companion.id }}">{{ companion.name }}</option>
            {% endfor %}
        </select>
        <a href="#" class="btn quest-send-companion" data-quest="{{ quest.id }}">Send companion</a>
    {% else %}
        There are no companions available for quests.
    {% endif %}
{% endif %}
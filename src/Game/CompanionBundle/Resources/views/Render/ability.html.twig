    <a class="has-tooltip help-tooltip" title="Adventurer: Quicker quests">
        <img src="{{ asset('bundles/ui/img/companion/ability/adventurer.png') }}" />
    </a>
{% elseif ability == constant('Game\\CompanionBundle\\Entity\\Companion::ABILITY_HONORABLE') %}

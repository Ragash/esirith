{% elseif ability == constant('Game\\CompanionBundle\\Entity\\Companion::ABILITY_FIGHTER') %}
    <a class="has-tooltip help-tooltip" title="Fighter: Has improved damage on combat">
        <img src="{{ asset('bundles/ui/img/companion/ability/fighter.png') }}" />
    </a>
